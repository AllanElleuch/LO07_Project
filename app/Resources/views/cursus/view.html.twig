{% extends 'cursus/cursus-subnav.html.twig' %}

{% block title %}
    Mes cursus
{% endblock %}

{% block content %}
    <h4>{{ cursus.label }}</h4>
    <h6 class="grey">Corentin Laithier - 36795</h6>

    {#Todo : Utiliser {{ cursusElement }} quand les cursus seront 'remplis' #}

    <table class="table">
        <thead class="thead-default">
        <tr>
            <th>Semestre</th>
            <th>Label</th>
            <th>Catégorie</th>
            <th>Affectation</th>
            <th>UTT</th>
            <th>Profil</th>
            <th>Crédits</th>
            <th>Résultat</th>
        </tr>
        </thead>
        <tbody>
        {% if cursusElements is defined %}
            {% for element in cursus.elementsFormations %}
                <tr>
                    <td>{% if element.semLabel is defined %} {{element.semLabel}} {% else %} ---   {% endif %}</td>
                    <td>{% if element.sigle is defined %} {{element.sigle}} {% else %} ---   {% endif %}</td>
                    <td>{% if element.categories.label is defined %} {{element.categories.label}} {% else %} ---   {%
                        endif %}   </td>
                    <td>{% if element.affectations.label is defined %} {{element.affectations.label}} {% else %} ---
                        {% endif %}  </td>
                    <td>{% if element.profil is defined %} {{element.profil == '1' ? 'Oui' : 'Non'}} {% else %} ---
                        {% endif %}</td>
                    <td>{% if element.utt is defined %} {{element.utt == '1' ? 'Oui' : 'Non'}} {% else %} vi---de   {%
                        endif %}</td>
                    <td>{% if element.credit is defined %} {{element.credit}} {% else %} ---   {% endif %}</td>
                    <td class="note-UE">
                    {% if element.resultats.label is defined %}
                        {% if element.resultats.label == 'A' or element.resultats.label == 'B' or element.resultats
                        .label == 'C' %}
                            <span class="badge badge-pill badge-success">{{ element.resultats.label }}</span>
                        {% elseif element.resultats.label == 'D' or element.resultats.label == 'E' %}
                            <span class="badge badge-pill badge-warning">{{ element.resultats.label }}</span>
                        {% elseif element.resultats.label == 'F' or element.resultats.label == 'Fx'%}
                            <span class="badge badge-pill badge-danger">{{ element.resultats.label }}</span>
                        {% else %}
                            <span class="badge badge-pill badge-default">{{ element.resultats.label }}</span>
                        {% endif %}
                    {% else %}
                        ---
                    {% endif %}
                    </td>>
                </tr>
            {% endfor %}

        {% endif %}
        </tbody>
    </table>



{% endblock %}
