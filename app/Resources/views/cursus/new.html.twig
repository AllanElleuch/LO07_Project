{% extends 'cursus/cursus-subnav.html.twig' %}
{% form_theme form 'form/bootstrap_4_horizontal_layout_table.html.twig' %}
{% block title %}
Nouveau cursus
{% endblock %}


{% block content %}
<link rel="stylesheet" href="{{ asset('css/cursus.css') }}">
<link rel="stylesheet" href="{{ asset('css/nav-pills.css') }}">
<link rel="stylesheet" href="{{ asset('css/cursus0.css') }}">






{{ form_start(form) }}


<div id="container-fluid col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <div class="row">









  <section class="row text-center placeholders">
    <div class="well-block">
      <div id="main_content">
        <!-- Nav tabs -->

        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">

              <div class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">


              <ul  class="nav nav-tabs  flex-column" role="tablist">
                <li class="nav-item"   >
                  <a class="nav-link active " role="tab" data-toggle="tab"  href="#form_tab_01" aria-controls="form_tab_01" >

                    <div class="row">


                     <input class="form-control col-md-5" size="7" type="text" name="_sem_seq" placeholder="N° Sem" value=""><input class="form-control col-md-5" size="7" type="text" name="_sem_label" placeholder="Sem X" value="">  <span class=" col-md-2"><i class="fa fa-times" aria-hidden="true"></i></span>
                      </div>


                   </a>
                </li>



                <li class="nav-item">
                  <a class="add-tab"  href="#"  id="main_add"><i class="fa fa-plus"></i> Ajouter Semestre</a>

                </li>

              </ul>
                </div>
              <!-- Tab panes -->

              <main class="">
                <h3>Cursus </h3>
                <div class="">
                  <div class="row">
                    <div class="col-sm-2">
                    {{ form_label(form.label) }}

                  </div>
                  <div class="col-sm-10">
                  {{ form_widget(form.label) }}

                </div>

              </div>

            </div>

            <h3> Ajouter des semestres et ajouter y vos UE </h3>


              <div class="tab-content container-fluid ">

                <div class="tab-pane active " id="form_tab_01" role="tabpanel">
                  <div class="container table-responsive table">
                    <div class="thead">
                      <div class="row target" >


                        <div class="col th">
                          Sigle
                        </div>
                        <div class="col th">
                          Crédits
                        </div>

                        <div class="col th">
                          N° Sem
                        </div>
                        <div class="col th">
                          Label Sem
                        </div>
                        <div class="col th">
                          Affectation
                        </div>
                        <div class="col th">
                          Catégories
                        </div>
                        <div class="col th">
                          Résultats
                        </div>
                        <div class="col th">
                          UTT
                        </div>
                        <div class="col th">
                          profil
                        </div>
                         <div class="col th">
                                                  Action
                                                </div>

                      </div>

                      <div class="tbody row">
                        {% for elem in form.elementsFormations %}
                              {{ form_row(elem) }}
                          {% endfor %}

                      </div>
                      <div class=" ">

                          <button type="submit"    name="form[envoyer]" class="btn btn-sm btn-outline-success bouttonAjouterCours">Ajouter cours</button>
                      </div>

                    </div>
                  </div>
                </div>



              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
  </section>

</main>
</div>









<ul class="nav nav-pills flex-column">
  <ul id="elemFormationSidebar" class="elemFormation" data-prototype="{{ form_widget(form.elementsFormations.vars.prototype)|e('html_attr') }}">

  </ul>
</ul>





{{ form_errors(form) }}
{{ form_row(form._token) }}


{{ form_row(form.envoyer) }}
</div>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

<script src="{{ asset('js/form/cursus.js') }}"></script>
<script src="{{ asset('js/form/cursus-pills.js') }}"></script>

{% endblock %}
