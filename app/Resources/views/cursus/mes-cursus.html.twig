{% extends 'cursus/cursus-subnav.html.twig' %}

{% block title %}
    Mes cursus
{% endblock %}

{% block content %}
    <table class="table">
        <thead class="thead-default">
        <tr>
            <th>Cursus</th>
            <th></th>
            <th></th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for oneCursus in cursus %}
            <tr>
                <td>{{ oneCursus.label }}</td>
                <td class="grey">{{ oneCursus.student }}</td>
                <td class="grey">{{ oneCursus.nbElements }} éléments</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a href="#" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="bottom"
                           title="Voir"><i class="fa fa-eye" aria-hidden="true"></i></a>
                        <a href="#" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="bottom"
                           title="Modifier"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                        <a href="#" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="bottom"
                           title="Dupliquer"><i class="fa fa-files-o" aria-hidden="true"></i></a>
                        <a href="#" class="btn btn-secondary btn-sm text-danger" data-toggle="tooltip"
                           data-placement="bottom"
                           title="Supprimer"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                    </div>

                    <a href="#" class="btn btn-secondary btn-sm"><i class="fa fa-arrow-circle-o-right"
                                                                    aria-hidden="true"></i> Appliquer un règlement</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% for c in cursus %}
        <li>{{ c.label|e }}</li>
    {% endfor %}


{% endblock %}
