{% extends 'cursus/cursus-subnav.html.twig' %}
{% form_theme form 'form/bootstrap_4_horizontal_layout.html.twig' %}


{% block title %}
    Cursus - Import
{% endblock %}

{% block content %}
        {% if notif is defined and notifClass is defined %}
            <div class="alert alert-{{ notifClass }} alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{ notif }}
            </div>
        {% endif %}

    <div class="text-center">
        <h1>Importation de cursus</h1>
        <h1 class="display-1"><i class="fa fa-cloud-upload" aria-hidden="true"></i></h1>
