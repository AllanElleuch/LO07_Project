{% extends 'reglements/reglements-subnav.html.twig' %}


{% block title %}
    Application d'un règlement à un cursus
{% endblock %}

{% block content %}
<h1 class="mb-3">{{cursus.etudiant.prenom}} {{cursus.etudiant.nom}}</h1>
<div class="row">
    <div class="col-md-6">
        <table class="table table-responsive">
            <thead class="thead-default">
            <tr>
                <th>Règles</th>
                <th>Crédits acquis</th>
                <th>Requis</th>
            </tr>
            </thead>
            <tbody>
            {% for result in results %}
                <tr>
                    <td>{{result.ruleCibleAgregat}} <span class="grey">({{result.ruleAffectation}})</span></td>
                    {% if result.ruleCibleAgregat == 'SE' or result.ruleCibleAgregat == 'NPML' %}
                        <td class="text-center">
                            <span class="badge badge-danger">
                                <i class="fa fa-times-circle" aria-hidden="true"></i>
                            </span>
                            <span class="badge badge-success">
                                <i class="fa fa-check-circle" aria-hidden="true"></i>
                            </span>
                        </td>
                        <td>-</td>
                    {% else %}
                        {% set percent = ((result.ruleObtained + 1) / (result.ruleRequired + 1)) * 100 %}
                        <td>
                            <div class="progress" style="width:15rem;">
                                <div class="progress-bar" role="progressbar" style="width: {{result.ruleObtained}}%; height: 1.2rem;" aria-valuenow="{{result.ruleObtained}}" aria-valuemin="0" aria-valuemax="100">{{result.ruleObtained}}</div>
                            </div>
                        </td>
                        <td>{{result.ruleRequired}}</td>
                    {% endif %}

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">Éléments manquants</h4>
                <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <p class="card-text"><small class="text-muted">Règlement utilisé : <a href="#">{{reglementLabel}}</a> </small></p>
            </div>
        </div>
        <br>
        <pre>
            <b>DEBUG</b>
            <code>
                {% for key,value in credits %}
                    {{key}} => {{value}}
                {% endfor %}
            </code>
        </pre>
    </div>
</div>






{% endblock %}
